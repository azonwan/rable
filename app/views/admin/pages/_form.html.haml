= form_for [:admin, page] do |f|
  %table
    %tr
      %td
        = f.label :key, '自定义URL'
        %small.smaller (必填)
    %tr
      %td{:style => 'position: relative;'}
        %span{:style => 'float: left;position: absolute; top: 7px; left: 6px; font-size: 14px;'} /page/
        = f.text_field :key, :class => :sls, :style => 'padding-left: 45px;'
        %small.smaller 只允许英文字符和下划线
        .sep10
    %tr
      %td
        = f.label :title, '页面标题'
        %small.smaller (必填)
    %tr
      %td
        = f.text_field :title, :class => :sl
        .sep10
    %tr
      %td
        = f.label :content, '页面内容'
        %small.smaller (必填)
    %tr
      %td
        = f.text_area :content, :class => :mll
        .sep3
        %span.fade 支持Markdown格式
        .sep10
    %tr
      %td
        = f.label :published, '发布状态'
    %tr
      %td
        = f.radio_button 'published', true
        %span.published 立刻发布
        = f.radio_button 'published', false
        %span.draft 保存为草稿
        .sep10
    %tr
      %td
        = f.submit '保存', :class => 'super normal button'

