!!! 5
%html{:lang => 'zh-CN'}
  %head
    = render 'shared/head'
    = stylesheet_link_tag "admin/base"
  %body
    #Top
      = render 'shared/top', :link_class => :white
    #Wrapper
      #Main
        #Sidebar
        #AdminMenu
          - dashboard_menu.each do |m|
            .box.fix_cell
              .cell
                %strong.fade= m[:name]
              - m[:items].each do |item|
                .cell
                  = image_tag "admin/#{item.second}.png", :align => :absmiddle, :valign => :middle
                  &nbsp;
                  = link_to item.first, item.last, :class => (:current_item if @title == item.first)
            = yield :rightbar
        #AdminContent
          = render 'shared/content'
        .c
    = render 'shared/footer'
