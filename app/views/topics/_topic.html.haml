.cell
  %table{:cellpadding => 0, :cellspacing => 0, :border => 0, :width => '100%'}
    %tr
      %td{:valign => :top, :class => :avatar}
        = link_to member_path(topic.user.nickname) do
          = image_tag topic.user.avatar.url(:medium)
      %td{:valign => :top, :style => 'padding-left: 12px'}
        .fr
          = link_to topic.comments.count, t_path(topic.id), :class => :count_livid
        .sep3
        %span.bigger{:style => 'font-size: 16px; line-height: 130%'}
          = link_to topic.title, t_path(topic.id)
        .sep5
        %span.created
          %strong= link_to topic.node.name, go_path(topic.node.key), :class => :node
          &nbsp;&nbsp;•&nbsp;&nbsp;
          %strong= link_to topic.user.nickname, member_path(topic.user.nickname), :class => :dark
          &nbsp;&nbsp;•&nbsp;&nbsp;
          = "#{topic.hit} 次点击"
          - last_comment = topic.comments.last
          - if last_comment
            &nbsp;&nbsp;•&nbsp;&nbsp;
            = time_ago_in_words(last_comment.created_at)
            replied by
            = link_to last_comment.user.nickname, member_path(last_comment.user.nickname)


