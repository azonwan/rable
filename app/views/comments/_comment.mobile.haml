- user_nickname = comment.user.nickname
.cell
  %table{:cellpadding => 0, :cellspacing => 0, :border => 0, :width => '100%'}
    %tr
      %td.avatar_mini{:valign => :top}
        = image_tag comment.user.avatar.url(:mini)
      %td{:style => 'padding-left: 5px;', :valign => :top}
        .fr
          %span.ago
            - _num = comment_counter + 1
            - if @total_pages > 1
              = "##{Settings.pagination.comments_per_topic * (@page_num.to_i - 1) + _num} -"
            - else
              = "##{_num} -"
            = time_ago_in_words(comment.created_at)
        = link_to user_nickname, member_path(user_nickname)
        .sep5
        = mobile_view comment.content
 

