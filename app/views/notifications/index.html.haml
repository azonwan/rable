.box
  .cell
    - if @unread_count > 0
      .fr.mark_all_as_read
        = link_to '全部标记为已读', all_read_notifications_path, :class => :op, :remote => true, :method => :post
    = build_navigation([@title])
  .inner
    %table{:cellpadding => 0, :cellspacing => 0, :border => 0}
      = render @notifications
  .inner
    = paginate @notifications, :theme => 'project_babel'
